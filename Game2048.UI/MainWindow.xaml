    <StackPanel Orientation="Vertical">
        <Grid Name="Infobar" ShowGridLines="False" Width="490" Height="80">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource StyleBorderInfobar}">
             <TextBlock Style="{StaticResource ResourceKey=StyleTextBlockBar}">
                 <Run>Score</Run>
                 <LineBreak/>
                 <Run>10</Run>
             </TextBlock>
            </Border>
            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource StyleBorderInfobar}">
            <TextBlock Style="{StaticResource ResourceKey=StyleTextBlockBar}">
                <Run Text="High Score"/>
                <LineBreak/>
                <Run Text="201"/>
            </TextBlock>
            </Border>
        </Grid>
        
        <Border Background="#bbada0" CornerRadius="10" Width="480" Height="490" BorderThickness="2">
            
