            <Button Grid.Row="0" Grid.Column="2"  Name="Button1_3" Content="8" Style="{StaticResource Btn8}"/>
            <Button Grid.Row="0" Grid.Column="3"  Name="Button1_4" Content="16" Style="{StaticResource Btn16}"/>
            <!-- второй ряд -->
